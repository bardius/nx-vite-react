{
  "name": "common-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/common-ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "configurations": {
        "ci": {
          "force": true,
          "outputFile": "libs/common-ui/reports/eslint.json",
          "format": "json"
        }
      }
    },
    "clean": {
      "executor": "nx:run-script",
      "options": {
        "script": "clean"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/common-ui/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true,
        "forceExit": true
      },
      "configurations": {
        "ci": {
          "ci": true
        }
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/common-ui/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/common-ui",
        "configDir": "libs/common-ui/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/common-ui/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "common-ui:build-storybook",
        "staticFilePath": "dist/storybook/common-ui"
      },
      "configurations": {
        "ci": {
          "buildTarget": "common-ui:build-storybook:ci"
        }
      }
    }
  }
}
